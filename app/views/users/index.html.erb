<% @users.each do |user| %>
<% if user.id != current_user.id%>
  <%= user.full_name %>
  <%= user.id%>
  <div class="profile_image">
    <%= cl_image_tag(user.profile.profile_picture_url) %>
  </div>
    <% if current_user.friendships.ids.present? %>
      <% if current_user.friendships.map(&:friend_id).include? user.id%>
          <div>
            <%=  "delete"%>
          </div>
        <% else %>
          <div>
            <%=  link_to "add friend" ,friendships_path(:friend_id => user.id, :user_id => current_user.id), :method => :post%>
          </div>
        <%end %>
      <% else %>
        <div class="button">
          <%=  "Add friend" %>
          <%=  link_to "add friend" ,friendships_path(:friend_id => user.id, :user_id => current_user.id), :method => :post%>

        </div>
      <% end %>
    <% end %>
  <% end %>
