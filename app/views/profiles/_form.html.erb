<%= simple_form_for @profile do |f| %>
  <%= f.input :date_of_birth, as: :date, :start_year => 1900 %>
  <%= f.input :street %>
  <%= f.input :house_number %>
  <%= f.input :zip_or_postal_code %>
  <%= f.input :town %>
  <%= f.input :country %>
  <%= f.input :language, as: :select, collection: AVAILABLE_LANGUAGES.sort.map {|k,v| [v,k]}, label: "Default language" %>

  <%= f.file_field :profile_picture_url %>

  <%= f.button :submit %>
<% end %>
